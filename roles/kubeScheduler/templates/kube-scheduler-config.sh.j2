#!/bin/bash

{{ BIN_PATH }}kubectl config set-cluster kubernetes \
  --certificate-authority=/etc/kubernetes/cert/ca.pem \
  --embed-certs=true \
  --server="{{ KUBE_APISERVER }}" \
  --kubeconfig=kube-scheduler.kubeconfig

{{ BIN_PATH }}kubectl config set-credentials system:kube-scheduler \
  --client-certificate=/etc/kubernetes/cert/kube-scheduler.pem \
  --client-key=/etc/kubernetes/cert/kube-scheduler-key.pem \
  --embed-certs=true \
  --kubeconfig=kube-scheduler.kubeconfig

{{ BIN_PATH }}kubectl config set-context system:kube-scheduler \
  --cluster=kubernetes \
  --user=system:kube-scheduler \
  --kubeconfig=kube-scheduler.kubeconfig

{{ BIN_PATH }}kubectl config use-context system:kube-scheduler --kubeconfig=kube-scheduler.kubeconfig

